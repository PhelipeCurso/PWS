@model IEnumerable<PWS.Models.Instituicao>

@{
    ViewData["Title"] = "Index";
}

<h1>Instituições</h1>

<p>
    <a class="btn btn-outline-success " asp-action="Create">Nova Instituição</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeInstituicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_do_Cadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeInstituicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_do_Cadastro)
            </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-success " asp-route-id="@item.Id">Alterar</a>
                    <a asp-action="Details" class="btn btn-outline-primary " asp-route-id="@item.Id">Detalhes</a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-outline-danger m-1" data-bs-toggle="modal" data-bs-target="#DeleteModal-@item.Id">
                        <i = class="fa fa-trash"> Deletar </i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModalLabel">Excluir Cliente</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Deseja realmente excluir a Instituição? @item.NomeInstituicao?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary m-1" data-bs-dismiss="modal">Não</button>
                                    <a asp-action="Delete" class="btn btn-outline-danger m-1" asp-route-id="@item.Id">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
